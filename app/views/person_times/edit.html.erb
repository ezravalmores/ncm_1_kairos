<div class='container'>    
  <div class='row'>
	  <div class='span13'>
<h4>Edit User Activity</h4><br/>	

<h1>Time Information</h4>
<span><em>update time generated by the system </em></span><br/><br/><br/>

<%= form_for(@person_time, :html => {:class => 'form-horizontal'})  do |f| %>
	<div class='control-group'>
	  <%= f.label :start_time, "Start Time", :class => 'control-label' %>		
       <div class= "controls">	
		 <% if !@person_time.start_time.nil? %>
         <%= f.text_field :start_time, :value => @person_time.start_time.strftime("%H:%M:%S"), :class => 'text_field' %>
         <% else %>
			 <%= f.text_field :start_time, :class => 'text_field' %>
		 <% end %>	
	   </div>
	  </div>
	
	 <div class='control-group'>
	   <%= f.label :end_time, "End Time", :class => 'control-label' %>
	     <div class='controls'>  
	     	 <% if !@person_time.end_time.nil? %>
	         <%= f.text_field :end_time, :value => @person_time.end_time.strftime("%H:%M:%S"), :class => 'text_field' %>
	         <% else %>
				 <%= f.text_field :end_time, :class => 'text_field' %>
			 <% end %>
	     </div>	
	  </div>
	 
	 <div class='control-group'>  
	   <%= f.label :total_time, "Total Time", :class => 'control-label' %>
	     <div class='controls'>
			 <% if !@person_time.total_time.nil? %>
	         <%= f.text_field :total_time, :value => @person_time.total_time.strftime("%H:%M:%S"), :class => 'text_field' %>
	         <% else %>
				 <%= f.text_field :total_time, :class => 'text_field' %>
			 <% end %>
	     </div>
	 </div>
	
	 <div class='control-group'>  
	   <%= f.label :activity, "Select Activity", :class => 'control-label' %>	
	    <div class ='controls'>
	   <%= f.select(:activity_id,options_from_collection_for_select(Activity.all, :id, :name, @person_time.activity_id),:include_blank => true) %>
        </div>
  	 </div>

	 <div class='control-group'>  
	   <%= f.label :specific_activity, "Select Specific Activity", :class => 'control-label' %>	
	    <div class ='controls'>
	   <%= f.select(:specific_activity_id, option_groups_from_collection_for_select(Activity.all,:specific_activities,:name, :id, :description, @person_time.specific_activity_id),:include_blank => true) %>
        </div>
  	 </div> 		
       <%= f.submit "Save my Changes",:class => "btn btn-primary" %>
</div>
<% end %>
</div>
</div>
</div>
